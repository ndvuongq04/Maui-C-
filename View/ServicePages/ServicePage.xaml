<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BTL_QLHD.View.ServicePages.ServicePage"
    Title="Quản lý dịch vụ">

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nút thêm nằm góc phải -->
        <Button
            Text="➕ Thêm dịch vụ"
            HorizontalOptions="End"
            Clicked="OnAddServiceClicked"
            BackgroundColor="#007AFF"
            TextColor="White"
            Margin="0,0,0,10"/>

        <!-- Danh sách dịch vụ -->
        <CollectionView
            Grid.Row="1"
            x:Name="ServiceListView"
            ItemsSource="{Binding Services}"
            SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Margin="0,5" Padding="10">
                        <Grid ColumnDefinitions="Auto,*,*,*,Auto,Auto" VerticalOptions="Center">
                            <!-- ID -->
                            <Label Text="{Binding Id}" WidthRequest="30"/>
                            <!-- Tên -->
                            <Label Text="{Binding Name}" Grid.Column="1"/>
                            <!-- Giá -->
                            <Label Text="{Binding Price}" Grid.Column="2"/>
                            <!-- Đơn vị -->
                            <Label Text="{Binding Unit}" Grid.Column="3"/>

                            <!-- Sửa -->
                            <Button
                                Text="Sửa"
                                Grid.Column="4"
                                BackgroundColor="Orange"
                                TextColor="White"
                                Clicked="OnEditClicked"
                                CommandParameter="{Binding .}"
                                WidthRequest="60"/>

                            <!-- Xóa -->
                            <Button
                                Text="Xóa"
                                Grid.Column="5"
                                BackgroundColor="Red"
                                TextColor="White"
                                Clicked="OnDeleteClicked"
                                CommandParameter="{Binding .}"
                                WidthRequest="60"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
